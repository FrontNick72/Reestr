// Info styles
//Хлебные крошки
.breadcrumbs {
  list-style none;
  padding 0;
    &__item {
      display inline
      &:after {
        content "•"
        color  #999999;
        font-size 15px;
        font-weight 400;
        line-height 18px;
        position relative;
        bottom -1px;
      }
      &:last-child {
        &:after{
          display none
        }
      }
    }
    &__link {
      font-family: Roboto;
      color #6e6e6e;
      font-size 13px;
      font-weight 400;
      line-height 18px;
      text-decoration none
    }
}

.breadcrumbs_main {
  margin 31px 0 0 0
}

//Блок с реестрами
.registry {
  float left
  width 770px
  .title {
    font-family RobotoSlabBold
    font-set(32px, rgba(55, 55, 55, 0.99))
  }
  &__title {
    margin 42px 0 30px 0
  }
  .article {
    background #fff
    padding 30px
    margin-bottom 20px
  }
  &__text {
    font-family RobotoSlab
    font-set(18px, #333333)
    margin-bottom 21px
  }
  &__link {
    font-family: RobotoBold;
    font-set(13px, #999)
    line-height 18px
    text-transform uppercase
    text-decoration none
    .fa {
      color:  #bba162;
      font-size: 16px;
      font-weight: 400;
      line-height: 18px;
      margin-left 8px
    }
  }
}

